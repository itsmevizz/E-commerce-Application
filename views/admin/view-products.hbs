<section>
  <div class="container">
    <div class="row mt-5 mb-2">
      <a href="/admin/add-product" class="btn btn-success ml-auto col-md-2">Add
        Product</a>
    </div>
    <table class="table mt-5" id="productTable">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Category</th>
          <th scope="col">Price</th>
          <th scope="col">Discription</th>
          <th>Image</th>
          <th> </th>
        </tr>
      </thead>
      <tbody class="">
        {{#each products}}
          <tr>
            {{!-- <th scope="row"></th> --}}
            <td>{{@index}}</td>
            <td>{{this.Name}}</td>
            <td>{{this.Category}}</td>
            <td>{{this.Price}}</td>
            <td>{{this.Description}}</td>
            <td><img
                src="/product-images/{{this._id}}.jpg"
                alt=""
                style="width: 70px; height: 70px;"
              /></td>
            <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
              <a
                href="/admin/delete-product/{{this._id}}"
                class="btn btn-danger" onclick="return confirm('Want to delete {{this.Name}}?')"
              >Delete</a>

            </td>
          </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>

<script>
  $(document).ready( function () {
    $('#productTable').DataTable();
} );
</script>