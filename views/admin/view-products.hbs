<section>
  <div class="container">
    <div class="row mt-5">
      <a href="/admin/add-product" class="btn btn-success ml-auto col-md-2">Add Product</a>
    </div>
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Category</th>
          <th scope="col">Price</th>
          <th scope="col">Discription</th>
          <th>Image</th>
        </tr>
      </thead>
      <tbody class="">
        {{#each products}}
          <tr>
            <th scope="row">1</th>
            <td>{{this.Name}}</td>
            <td>{{this.Category}}</td>
            <td>{{this.Price}}</td>
            <td>{{this.Description}}</td>
            <td><img
                src="/product-images/{{this._id}}.jpg"
                alt=""
                style="width: 70px; height: 70px;"
              /></td>
          </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>